{% extends 'layout/a_staff/employee/base_employee.html.twig' %}

{% block title %}Hello EmployeeSecurityController!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="d-flex justify-content-center">
            <h1 class="h1-history text-white fw-bold display-6 text-uppercase">connexion</h1>
        </div>
        <div class="d-flex justify-content-center">
            <div class="connection-content">
                <div class="d-flex justify-content-center">
                    <label class="mt-2 mb-1 text-white" for="username">Email</label>
                </div>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control input-email m-auto" autocomplete="email" required autofocus>
                <div class="d-flex justify-content-center">
                    <label class="mt-2 mb-1 text-white" for="password">Mot de passe</label>
                </div>
                <input type="password" name="_password" id="password" class="form-control input-password m-auto" autocomplete="current-password " required>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                <div class="d-flex justify-content-center">
                    <p class="fs-6">mot de passe oubli√©</p>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="button-connect btn btn-lg mt-4 text-uppercase fw-bold" type="submit">valider
                    </button>
                </div>
            </div>
        </div>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        
    </form>
{% endblock %}


