{% extends 'layout/clients/base_clients.html.twig' %}


{% block title %}Hello RecordVehicleController!
{% endblock %}

{% block body %}
	<section>
		<h1 class="text-center h1-history text-white fw-bold display-6 text-uppercase">enregistrer un véhicule</h1>
	</section>

	<section>
		<div class="d-flex justify-content-center">
			<div class="record-vehicle-content p-0 pb-2">
            <h3 class="h3_ps text-center text-white text-uppercase fs-5 mt-1 mb-2">informations sur le véhicule</h3>
            <div class="m-m-c_vehicle m-auto mb-4">
                <div class="brand-vehicle d-flex">
                    <p class="brand-text text-white text-uppercase my-auto">marque</p>
                    <div class="d-flex justify-content-end">
                        <input type="text" class="brand-input border-input my-auto">
                    </div>
                </div>
                <div class="model-vehicle d-flex">
                    <p class="model-text text-white text-uppercase my-auto">modèle</p>
                    <div class="d-flex justify-content-end">
                        <input type="text" class="model-input border-input my-auto">
                    </div>
                </div>
                <div class="color-vehicle d-flex">
                    <p class="color-text text-white text-uppercase my-auto">couleur</p>
                    <div class="d-flex justify-content-end">
                        <input type="text" class="color-input border-input my-auto">
                    </div>
                </div>
            </div>
            <h6 class="h3_ps text-center text-white text-uppercase mt-1 mb-2">énergie</h6>
            <div class="energy-content d-flex justify-content-between m-auto mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label text-white text-uppercase" for="flexRadioDefault1">
                        focile
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label text-white text-uppercase" for="flexRadioDefault1">
                        hybride
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label text-white text-uppercase" for="flexRadioDefault1">
                        elec
                    </label>
                </div>
            </div>
            <h6 class="h3_ps text-center text-white text-uppercase mt-1 mb-2">immatriculation</h6>
            <div class="license-content m-auto mb-4">
                <div class="license-number d-flex">
                    <p class="num-text text-white text-uppercase my-auto">n° immat</p>
                    <div class="d-flex justify-content-end">
                        <input type="text" class="num-input border-input my-auto">
                    </div>
                </div>
                <div class="first-date-license d-flex">
                    <p class="first-date-text text-white text-uppercase my-auto">1ère immat</p>
                    <div class="d-flex justify-content-end">
                        <input type="date" class="first-date-input border-input my-auto">
                    </div>
                </div>
            </div>
            <h6 class="h3_ps text-center text-white text-uppercase mt-1 mb-2">nombre de places c.g</h6>
            <div class="number-seats-content m-auto mb-4">
                <div class="number-seats-vehicle d-flex">
                    <p class="num-seats-text text-white text-uppercase my-auto">nombre de places</p>
                    <div class="test d-flex justify-content-end my-auto">
                        <input type="text" class="num-seats-input border-input">
                    </div>
                </div>
            </div>

            <h6 class="h3_ps text-center text-white text-uppercase mt-1 mb-3">caractéristiques du véhicule</h6>
            <div class="caract-prefer-vehicle m-auto">
                <div class="div-switch-button m-auto d-flex align-items-center justify-content-center mb-4 gap-5">
                    <label for="modeSwitch" class="form-check-label label-switch-button text-uppercase text-white mb-0">possède la climatisation</label>
                    <div class="form-check form-switch m-0">
                        <input class="form-check-input switch-button" type="checkbox" role="switch" id="modeSwitch">
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="button-connect btn btn-lg mt-4 text-uppercase fw-bold" type="submit">valider
                </button>
            </div>
		</div>
	</div>
</div></section>{% endblock %}{# {% block javascripts %}
	    {{ parent() }}
	    {{ importmap(['home']) }}
	{% endblock %} #}
