{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, 
                <a href="{{ path('app_clients_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="d-flex justify-content-center">
            <h1 class="h1-history text-white fw-bold display-6 text-uppercase">connexion</h1>
        </div>
        <div class="d-flex justify-content-center">
            <div class="connection-content">
                <div class="d-flex justify-content-center">
                    <label class="mt-2 mb-1 text-white" for="username">Email</label>
                </div>
                <input type="email" value="{{ last_username|default('') }}" name="_username" id="username" class="form-control input-email m-auto" autocomplete="email" required autofocus>
                
                <div class="d-flex justify-content-center">
                    <label class="mt-2 mb-1 text-white" for="password">Mot de passe</label>
                </div>
                <input type="password" name="_password" id="password" class="form-control input-password m-auto" autocomplete="current-password" required>
                
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                
                <div class="d-flex justify-content-center">
                    <p class="fs-6">mot de passe oubli√©</p>
                </div>
                <div class="d-flex justify-content-center">
                    <p class="text-white text-uppercase text-center mt-2">se connecter en tant que :</p>
                </div>
                <div class="d-flex justify-content-between justify-content-md-evenly">
                    <div class="checkbox-driver d-flex align-items-center flex-no-wrap">
                        <input type="checkbox" name="_chauffeur" id="_chauffeur" class="me-2">
                        <label class="text-uppercase text-white" for="_chauffeur">chauffeur</label>
                    </div>
                    <div class="checkbox-passenger d-flex align-items-center flex-no-wrap">
                        <input type="checkbox" name="_passager" id="_passager" class="me-2">
                        <label class="text-uppercase text-white" for="_passager">passager</label>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="button-connect btn btn-lg mt-4 text-uppercase fw-bold" type="submit">valider</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
