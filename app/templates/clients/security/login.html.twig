{% extends 'layout/clients/base_clients.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 d-block text-center">
                Vous êtes connecté an tant que :  {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h1-history text-center text-white fw-bold display-6 text-uppercase">connexion</h1>

        <div class="d-flex justify-content-center">
            <div class="connection-content">
                <label class="d-block text-center mt-2 mb-1 text-white" for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control input-email border-input m-auto" autocomplete="email" required autofocus>
                <label class="d-block text-center mt-2 mb-1 text-white" for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control input-email border-input m-auto" autocomplete="current-password" required>
                <p class="fs-6 d-block text-center">mot de passe oublié</p>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <p class="text-white text-uppercase d-block text-center mt-2">se connecter en tant que :</p>
                <div class="d-flex justify-content-between justify-content-md-evenly">
                    <div class="checkbox-driver d-flex align-items-center flex-no-wrap">
                        <input type="checkbox" name="_chauffeur" id="_chauffeur" class="me-2">
                        <label class="text-uppercase text-white" for="_chauffeur">chauffeur</label>
                    </div>
                    <div class="checkbox-passenger d-flex align-items-center flex-no-wrap">
                        <input type="checkbox" name="_passager" id="_passager" class="me-2">
                        <label class="text-uppercase text-white" for="_passager">passager</label>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="button-connect btn btn-lg mt-4 text-uppercase fw-bold" type="submit">valider
                    </button>
                </div>
            </div>
        </div>

        <input type="hidden" name="_target_path" value="{{ path('app_clients_carpools') }}">
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}
    </form>
{% endblock %}
